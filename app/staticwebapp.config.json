{
    "platform": {
      "apiRuntime": "python:3.8"
    },
    "routes": [
      {
        "route": "/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/.auth/login/twitter",
        "statusCode": 404
      },
      {
        "route": "/.auth/login/github",
        "statusCode": 404
      }
    ],
    "responseOverrides": {
      "401": {
        "statusCode": 302,
        "redirect": "/.auth/login/aad"
      }
    }
  }